CREATE DATABASE hospital_system;

USE hospital_system;

CREATE TABLE admin (
    id INT AUTO_INCREMENT PRIMARY KEY,
    email VARCHAR(100) NOT NULL UNIQUE,
    password VARCHAR(100) NOT NULL,
    name VARCHAR(100),
    imagen TEXT,
    genero VARCHAR(100),
    fecha DATE DEFAULT TIMESTAMP(NOW())
);

CREATE TABLE doctores(
	id INT PRIMARY KEY AUTO_INCREMENT,
    doctor_id VARCHAR(50) DEFAULT (UUID()),
    password VARCHAR(100) NOT NULL,
    email VARCHAR(100) NOT NULL UNIQUE,
    name VARCHAR(100) NOT NULL,
    fecha_creacion DATE DEFAULT TIMESTAMP(NOW()),
    status VARCHAR(50) NOT NULL,
    imagen TEXT,
);

CREATE TABLE citas(
    id INT PRIMARY KEY AUTO_INCREMENT,
    cita_id VARCHAR(50) NOT NULL UNIQUE DEFAULT(UUID()),
    paciente_id BIGINT,
    name VARCHAR(100) NOT NULL,
    genero VARCHAR(50) NOT NULL,
    descripcion TEXT NOT NULL,
    diagnostico TEXT NOT NULL,
    tratamiento TEXT NOT NULL,
    telefono VARCHAR(20),
    direccion VARCHAR(150),
    fecha_creacion DATE DEFAULT NOW(),
    fecha_modificacion DATE,
    fecha_eliminacion DATE,
    estatus VARCHAR(50),
    doctor_id VARCHAR(50),
    calendario DATE
);

CREATE TABLE pacientes(
    id INT PRIMARY KEY AUTO_INCREMENT,
    nombre VARCHAR(100) NOT NULL,
    email VARCHAR(100) NOT NULL UNIQUE,
    password VARCHAR(100) NOT NULL,
    codigo VARCHAR(100),
    numero VARCHAR(15),
    direccion TEXT,
    imagen VARCHAR(500),
    diagnostico TEXT,
    tratamiento TEXT,
    descipcion TEXT,
    doctor VARCHAR(100)
    fecha DATE,
    fecha_modificacion DATE,
    fecha_eliminacion DATE,
    estatus VARCHAR(100),
    genero VARCHAR(50) NOT NULL
);

CREATE TABLE pagos(
    id INT PRIMARY KEY AUTO_INCREMENT,
    paciente_id VARCHAR(100) NOT NULL UNIQUE,
    doctor_id VARCHAR(100) NOT NULL UNIQUE,
    total_dias INT NOT NULL,
    precio_total INT NOT NULL,
    fecha_entrada DATE NOT NULL,
    fecha_verificacion DATE NOT NULL,
    fecha_pago DATE NOT NULL
);
